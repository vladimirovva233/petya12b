@using WebAppDog.Models
@model IEnumerable<DogAllViewModel>

    @{
    ViewData["Title"] = "All";

    }

    <h1>All Dogs</h1>
    <p>
        <a asp-action="Create">Create New Dog</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Breed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Picture)" alt="image" width="100px" />
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                </td>

                <td>
                    <a asp-action="Edit" asp-controller="Dogs" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
            <form asp-controller="Dogs" asp-action="All" method="get">
                <p>
                    Breed:<input type ="text" name="SearchStringBreed"/>
                    Name:<input type="text" name="SearchStringBreed" />
                    <input type="submit" value="Filter"/>
                </p>
            </form>
        </tbody>
    </table>
